@{
    ViewData["Title"] = "Details";
    var currentUser = ViewBag.User
        .Replace("\\", "\\\\")
        .Replace("'", "\\'");
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Article.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Article.Description
        </dd>
        <dt class="col-sm-2">
            File Name
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Article.FileName
        </dd>
        <dt class="col-sm-2">
            File Path
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Article.FilePath
        </dd>
        <dt class="col-sm-2">
            Contribution
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.FacultyName
        </dd>
        <dt class="col-sm-2">
            Account
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Account.FirstName @ViewBag.Article.Account.LastName
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            @switch (ViewBag.Article.Article.State)
            {
                case 0:
                    <span class="badge bg-warning text-dark">Pending</span>
                    break;
                case 1:
                    <span class="badge bg-success">Accepted</span>
                    break;
                case 2:
                    <span class="badge bg-danger">Rejected</span>
                    break;
                default:
                    <span class="badge bg-secondary">Unknown</span>
                    break;
            }
        </dd>
        <dt class="col-sm-2">
            Created At
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Article.CreatedAt
        </dd>
        <dt class="col-sm-2">
            Updated At
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Article.UpdatedAt
        </dd>
    </dl>
</div>
<div>
    <form asp-action="AcceptArt" asp-route-id="@ViewBag.Article.Article.Id" method="post">
        <button type="submit">Accept</button>
    </form>
    <form asp-action="RejectArt" asp-route-id="@ViewBag.Article.Article.Id" method="post">
        <button type="submit">Reject</button>
    </form>
    <a asp-action="Index">Back to List</a>
</div>

<div class="container content">
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">Chat (juno làm cho nó giống design dùm tui nhe với tin nhắn có 2 loại là class in với class out thì class in sẽ là tin nhắn nhận được nằm ở bên trái còn class out là tin nhắn mình gửi nằm bên phải)</div>
                <div class="card-body height3">
                    <ul id="messagesList" class="chat-list">
                    </ul>
                    <hr />
                    <div class="d-flex w-100 gap-2 align-items-center">
                        <textarea id="messageInput" class="flex-fill py-1 mr-2" placeholder="Enter message" rows="1"></textarea>
                        <button id="sendButton" type="button" class="btn btn-info">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var currentUser = '@(currentUser)';
</script>
<script src="~/js/chat.js"></script>

<style>
    .chat-list {
        padding: 0;
        font-size: .8rem;
    }

        .chat-list li {
            margin-bottom: 10px;
            overflow: auto;
            color: #ffffff;
        }

        .chat-list .chat-img {
            float: left;
            width: 48px;
        }

            .chat-list .chat-img img {
                -webkit-border-radius: 50px;
                -moz-border-radius: 50px;
                border-radius: 50px;
                width: 100%;
            }

        .chat-list .chat-message {
            -webkit-border-radius: 50px;
            -moz-border-radius: 50px;
            border-radius: 50px;
            background: #5a99ee;
            display: inline-block;
            padding: 10px 20px;
            position: relative;
        }

            .chat-list .chat-message:before {
                content: "";
                position: absolute;
                top: 15px;
                width: 0;
                height: 0;
            }

            .chat-list .chat-message h5 {
                margin: 0 0 5px 0;
                font-weight: 600;
                line-height: 100%;
                font-size: .9rem;
            }

            .chat-list .chat-message p {
                line-height: 18px;
                margin: 0;
                padding: 0;
            }

        .chat-list .chat-body {
            margin-left: 20px;
            float: left;
            width: 70%;
        }

        .chat-list .in .chat-message:before {
            left: -12px;
            border-bottom: 20px solid transparent;
            border-right: 20px solid #5a99ee;
        }

        .chat-list .out .chat-img {
            float: right;
        }

        .chat-list .out .chat-body {
            float: right;
            margin-right: 20px;
            text-align: right;
        }

        .chat-list .out .chat-message {
            background: #fc6d4c;
        }

            .chat-list .out .chat-message:before {
                right: -12px;
                border-bottom: 20px solid transparent;
                border-left: 20px solid #fc6d4c;
            }

    .card .card-header:first-child {
        -webkit-border-radius: 0.3rem 0.3rem 0 0;
        -moz-border-radius: 0.3rem 0.3rem 0 0;
        border-radius: 0.3rem 0.3rem 0 0;
    }

    .card .card-header {
        background: #17202b;
        border: 0;
        font-size: 1rem;
        padding: .65rem 1rem;
        position: relative;
        font-weight: 600;
        color: #ffffff;
    }

    .content {
        margin-top: 40px;
    }
</style>
