﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/notification.js"></script>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolProject1640.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
    <script src="https://kit.fontawesome.com/1c6258baf1.js" crossorigin="anonymous"></script>
</head>
<body class="bg-[#EBDFD7]">
    @if (SignInManager.IsSignedIn(User))
    {
        <header>
            <nav class="w-full flex justify-between h-[90px]  sm:h-[70px] lg:h-[80px]">
                <div class="flex w-full justify-between bg-black items-center text-white">
                    <div>
                        <a class="text-[#FD7401] font-bold text-4xl ml-5" asp-area="" asp-controller="Home" asp-action="Index">Greenwich</a>
                        <button class="" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class=""></span>
                        </button>
                    </div>

                    <div class="text-white">
                        <ul class="flex space-x-10 text-2xl font-bold lg:text-xl lg:px-10 sm:hidden  ">
                            @if (User.IsInRole("Guest"))
                            {
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">All Articles</a>
                                </li>
                            }
                            else if (User.IsInRole("Student"))
                            {
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">All Articles</a>
                                </li>
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Contributions" asp-action="IndexUser">Your Articles</a>
                                </li>
                            }
                            else if (User.IsInRole("Manager"))
                            {
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">All Articles</a>
                                </li>
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Contributions" asp-action="IndexUser">Contributions</a>
                                </li>
                            }
                            else if (User.IsInRole("Coordinator"))
                            {
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">All Articles</a>
                                </li>
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Contributions" asp-action="IndexUser">Mark</a>
                                </li>
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Admins" asp-action="IndexCoor">Account</a>
                                </li>
                            }
                            else if (User.IsInRole("Administrator"))
                            {
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Admins" asp-action="DashBoardAdmin">Dashboard</a>
                                </li>
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">All Article</a>
                                </li>
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Contributions" asp-action="Index">Contribution</a>
                                </li>

                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Contributions" asp-action="IndexUser">Article</a>
                                </li>
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="Admins" asp-action="Index">Account</a>
                                </li>
                                <li class="hover:text-[#FD7401]">
                                    <a class="" asp-area="" asp-controller="TermAndCons" asp-action="Index">Term</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>